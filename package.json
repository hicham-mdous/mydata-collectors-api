{
  "name": "mdo-permissions",
  "version": "1.0.0",
  "description": "A microservice to manage user permissions",
  "main": "dist/src/server.js",
  "scripts": {
    "build": "cross-env NODE_ENV=production tsc -p ./tsconfig.json",
    "start": "node dist/src/server.js",
    "dev": "nodemon --exec \"ts-node -r tsconfig-paths/register --project ./tsconfig.json ./src/server.ts\" -e ts",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --quiet --fix",
    "test": "jest --config jest.config.ts",
    "create-migration": "knex migrate:make -x ts --knexfile ./src/knexConfig.ts",
    "migrations": "knex migrate:latest --knexfile ./src/knexConfig.ts",
    "migration-down": "knex migrate:down --knexfile ./src/knexConfig.ts",
    "rollback-migration": "knex migrate:rollback --knexfile ./src/knexConfig.ts",
    "seed": "knex seed:run --knexfile ./src/knexConfig.ts",
    "reset-db": "node cli -r",
    "aws:login": "aws codeartifact login --tool npm --repository mdo-backend-tools --domain mdo-backend-tools --domain-owner 936341724687",
    "aws:logout": "echo \"\" > $(npm config get userconfig)",
    "preinstall": "npm run aws:login",
    "postinstall": "npm run aws:logout"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@apollo/subgraph": "^0.1.5",
    "@graphql-tools/load-files": "^6.5.3",
    "@graphql-tools/merge": "^8.2.3",
    "@graphql-tools/schema": "^8.3.1",
    "@types/node-schedule": "^2.1.0",
    "apollo-server": "^3.6.2",
    "apollo-server-core": "^3.6.3",
    "apollo-server-express": "^3.6.2",
    "bcrypt": "^5.0.1",
    "checkit": "^0.7.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "cron": "^2.1.0",
    "cross-env": "^7.0.3",
    "csv": "^6.1.4",
    "csv-parse": "^5.2.1",
    "dayjs": "^1.10.7",
    "dotenv-safe": "^8.2.0",
    "express": "^4.17.2",
    "graphql": "^15.8.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.95.15",
    "lodash": "^4.17.21",
    "mdo-backend-tools": "^1.1.2",
    "multer": "^1.4.4",
    "node-schedule": "^2.1.0",
    "pg": "^8.7.3",
    "redis": "^3.1.2",
    "rimraf": "^3.0.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/dotenv-safe": "^8.1.2",
    "@types/express": "^4.17.13",
    "@types/lodash": "^4.14.178",
    "@types/multer": "^1.4.7",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.4.7",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "typescript": "^4.5.5"
  }
}
